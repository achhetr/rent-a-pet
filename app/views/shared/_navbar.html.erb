<% if user_signed_in? %>
  <div class="container">
    <div class="navbar">
      <div class="logo">
        <%= image_tag 'https://res.cloudinary.com/dddsdfpy5/image/upload/v1614644263/Orange_and_White_Dog_Walking_Service_Logo_flb6pz.png' %>
      </div>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Pets', pets_path %></li>
        <li></li>
        <li><%= link_to 'Dashboard', dashboards_path %></li>
        <li>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name.upcase %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
              <%= link_to 'Profile', edit_profile_path(current_user.id), class: "dropdown-item" %>
              <%= link_to 'Settings', edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to 'Bookings', bookings_path, class: "dropdown-item" %>
            </div>
          </div>
        </li>
        <li>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        </li>
        <li class="img-circle-container">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "img-profile"%> 
          <% else %>
            <%= cl_image_tag 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png', class: 'img-profile' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>



