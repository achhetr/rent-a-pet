<div class="container">
  <div class="navbar">
    <div class="logo">
      <%= image_tag 'https://res.cloudinary.com/dddsdfpy5/image/upload/v1614644263/Orange_and_White_Dog_Walking_Service_Logo_flb6pz.png' %>
    </div>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Pets', pets_path %></li>
      <li></li>
      <li><%= link_to 'Dashboard', dashboards_path %></li>
      <li>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.email.split('@').first.upcase %>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <%= link_to 'Profile', pets_path, class: "dropdown-item" %>
            <%= link_to 'Bookings', bookings_path, class: "dropdown-item" %>
          </div>
        </div>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign In', user_session_path %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li class="img-circle-container">
            <%= image_tag 'https://ca.slack-edge.com/T02NE0241-U01HYC8DESK-2686cf6950e4-70', class: "img-profile"%> 
            </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

