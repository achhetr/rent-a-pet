<div class="container">
	<h1 class="text-center">RENT-A-PET</h1>
	<%= link_to 'Add Pet', new_pet_path %>
	<div class="pet_cards">
		<ul>
			<% @pets.each do |pet|  %>
				<li>
					<%= link_to pet_path(pet.id) do %>
						<h1><%= pet.name %></h1>
					<% end %>
					<p><%= pet.description %></p>
					<p><%= pet.pet_type %></p>
					<p><%= pet.image_url %></p>
					<p><%= pet.user.email %></p>
					<p>$ <%= pet.price %></p>
				</li>	
			<% end %>
		</ul>
	</div>
</div>