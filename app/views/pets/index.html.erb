<div class="container">
	<h1 class="text-center">RENT-A-PET</h1>
	<%= link_to 'Add Pet', new_pet_path %>
	<div class="pet_cards">
		<ul>
			<% @pets.each do |pet|  %>
				<li class="list-unstyled">
					<div class="border d-flex flex-column w-50 align-items-center my-4 p-3">
						<%= link_to pet_path(pet.id) do %>
							<h1><%= pet.name %></h1>
						<% end %>
						<p><strong>Description</strong> <%= pet.description %></p>
						<p><strong>Pet Type</strong> <%= pet.pet_type %></p>
						<p><strong>Image URL</strong> <%= pet.image_url %></p>
						<p><strong>Owner</strong> <%= pet.user.email.split("@").first.upcase %></p>
						<p><strong>Price</strong> $ <%= pet.price %> per day</p>
					</div>
				</li>	
			<% end %>
		</ul>
  </div>
</div>
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="https://c0.wallpaperflare.com/preview/681/551/764/dog-dog-eurasier-pup-puppy.jpg" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>	
